<nav class="navbar navbar-expand-lg bg-primary bg-opacity-25">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <%= image_tag "icon.svg", height: 50, width: 50, class: "d-inline-block align-text-top me-3"%>
      <span style="font-size: 30px" >KitchenShop</span>
    </a>
    <div>
      <%= form_tag products_path, method: "get",  class: "d-flex" do %>
        <%= text_field_tag :search, params[:search], class: "form-control me-3", placeholder: "Я шукаю..." %>
        <%= submit_tag "Пошук", class: "btn btn-secondary" %>
      <% end %>
    </div>
    <div>
      <%= link_to(image_tag("user_icon.svg", class: "btn btn-outline-secondary rounded-circle", style: "height:50px;width:50px", id: "user-icon", alt: "User Icon")) %>
      <%=link_to (image_tag "heart_icon.svg", class: "btn btn-outline-danger rounded-circle", style: "height:50px;width:50px"), wishlist_show_url %>
      <%=link_to (image_tag "shopping_cart_icon.svg", class: "btn btn-outline-secondary rounded-circle", style: "height:50px;width:50px"), cart_show_url%>
    </div>
  </div>
</nav>

<div id="user-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="user-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="user-modal-label">Профіль</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% if user_signed_in? %>
          <%= link_to "Мій профіль", account_path_url, method: :get %><br>
          <%= link_to "Налаштування", settings_path_url, method: :get %><br>
          <%= link_to "Вийти", logout_path, method: :get %>
        <% else %>
          <%= link_to "Увійти", new_user_session_path %><br>
          <%= link_to "Зареєструватися", new_user_registration_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<style>
    #user-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1050;
        width: 100%;
        height: 100%;
        overflow-x: hidden;
        overflow-y: auto;
        outline: 0;
    }

    #user-modal.show {
        display: block;
    }

    .modal-dialog {
        position: relative;
        width: auto;
        margin: 0.5rem;
        pointer-events: none;
    }

    .modal-content {
        position: relative;
        display: flex;
        flex-direction: column;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid rgba(0, 0, 0, 0.2);
        border-radius: 0.3rem;
        outline: 0;
    }

    .modal-body {
        padding: 1rem;
    }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var userIcon = document.getElementById("user-icon");
        var modal = document.getElementById("user-modal");
        var closeButton = modal.querySelector(".btn-close");

        function toggleModal(event) {
            event.preventDefault();
            modal.classList.toggle("show");
        }

        userIcon.addEventListener("click", toggleModal);
        closeButton.addEventListener("click", toggleModal);

        modal.addEventListener("click", function(event) {
            if (event.target === modal) {
                toggleModal(event);
            }
        });
    });
</script>



