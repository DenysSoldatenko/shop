<p style="color: green"><%= notice %></p>
<body>
<%= render "shared/navbar" %>
<div class="wrapper d-flex align-items-stretch vh-100">
  <nav class="bg-danger d-flex flex-column align-items-center" style="width: 20%">
    Категорії-наслідники і фільтри
    <% @children.each do |category| %>
      <%= link_to category.name, "#{category.id}", style: "font-size: 25px;"%>
    <% end %>
  </nav>
  <div class="bg-primary" style="width: 80%">
    <%i = 0 %>
    <%@products.each do |product| %>
      <%if i%4==0 && i!=0 %>
        </div>
      <%end %>
      <%if i%4==0 %>
        <div class="row bg-info mt-2" style="margin: auto;">
      <%end %>
      <div class="col-3">
        <div class="card bg-danger">
          <%= image_tag "product.jpg", style: 'height:100%;width:auto;', class: "card-img-top "%>
          <div class="card-body">
            <h3 class="card-title"><%=link_to product.name, product_path(product.id) %></h3>
            <h5 class="card-text"><%=product.price %></h5>
          </div>
        </div>
      </div>
      <%i+=1 %>
    <% end %>
  </div>
</div>
</div>

</body>
