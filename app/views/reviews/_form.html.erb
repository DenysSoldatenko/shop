<%= form_with(model: review, class: "card mb-3") do |form| %>
  <%=form.hidden_field :product_id, value: product_id%>
  <div class="card-header d-flex align-items-center">
    <%= form.label :rating, value: "Оцінка" %>
    <%= form.number_field :rating, min: 0, max: 5, value: @review==nil ? 0 : @review.rating, class: "ms-3 form-control", style: "width:100px;" %>
  </div>
  <div class="card-body">
    <%= form.label :comment, value: "Коментар" %>
    <%= form.text_area :comment, class: "form-control"%>
  </div>
  <div class="card-footer">
    <%= form.submit "Зберегти", class: "btn btn-success" %>
  </div>
<% end %>